<h1 class="center" ng-init="getCartItems()">Revisi√≥n de carrito</h1>

<div class="row col m8 offset-m2 white z-depth-1">
    <table class="striped bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Subtotal</th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="item in products">
                <td>{{ item.name }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.price }}</td>
                <td>{{ item.price * item.quantity }}</td>
            </tr>
        </tbody>
    </table>
    <div class="checkout-buttons">
        <button class="waves-effect waves-light btn blue">Comprar</button>
        <button class="waves-effect waves-light btn">regresar</button>
    </div>
</div>